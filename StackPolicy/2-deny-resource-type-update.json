{
    "Statement" : [
        {
            "Effect" : "Allow",
            "Action" : "Update:*",
            "Principal": "*",
            "Resource" : "*"
        },
        {
            "Effect" : "Deny",
            "Action" : "Update:*",
            "Principal": "*",
            "Resource" : "*",
            "Condition": {
                "StringEquals" : {
                    "ResourceType": ["AWS::EC2::SecurityGroup"]
                }
            }
        }
    ]
}  